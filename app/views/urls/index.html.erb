<h1>Listing urls</h1>

<table>
  <tr>
    <th>Link</th>
    <th>Short link</th>
    <th>Vanity</th>
    <th>Count</th>
    <th></th>
  </tr>

<% @urls.each do |url| %>
  <tr>
    <td><%= url.link %></td>
    <td><%= url.short_link %></td>
    <td><%= url.vanity_url %></td>
        <td><%= url.counter %></td>
    <td><%= link_to 'Show', url %></td>
    <td><%= link_to 'Edit', edit_url_path(url) %></td>
    <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Url', new_url_path %>
